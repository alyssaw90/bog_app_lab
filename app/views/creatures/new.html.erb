
<div class="col-md-4 col-md-offset-4">

<h2>Add New Creature</h2>
<br>
<div>
<%= bootstrap_form_for @creature do |f| %>
  <%= f.text_field :name, :placeholder => "Creature Name", :class => "form-control"%>
  <br>
  <%= f.text_field :desc, :placeholder => "Creature Description", :class => "form-control"%>
  <br>

  <%= f.collection_check_boxes :tag_ids, @tags, :id, :name %>

  <%= f.submit :class => "btn btn-primary"%>
<% end %>

<%= link_to 'Back', creatures_path%>

</div>
</div>
</div>
</div>