<div class="col-md-4 col-md-offset-4">
  <h1>Edit Creature</h1>

  <%= bootstrap_form_for :creature, url: creature_path(@creature), method: :patch do |f| %>

  <% if @creature.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@creature.errors.count, "error") %> prohibited
      this team from being saved:
    </h2>
    <ul>
      <% @creature.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.text_field :name, :placeholder => "Creature Name", :class => "form-control" %>
  <%= f.text_field :desc, :placeholder => "Creature Description", :class => "form-control" %>
  <%= f.collection_check_boxes :tag_ids, @tags, :id, :name %>

  <%= f.submit :class => "btn btn-primary" %>
  <% end %>

</div>
</div>
</div>