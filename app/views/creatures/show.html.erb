<div class="col-md-4 col-md-offset-4">

  <p>
    <h2>Show Page</h2>
    <br>
    <strong>Name:</strong>
    <%= @creature.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @creature.desc %> 
  </p>

  <p>
    <strong>Photo:</strong>
    <% @results.each do |photo|%>
      <% large = photo.gsub("_s","")%>
      <%= link_to image_tag(photo, :class => "thumbnail"), large%>
    <% end %>
  </p>

  <%= link_to 'Back to all Creatures', creatures_path %>

</div>
</div>
</div>
